            <div class="form-group">
                @Html.LabelFor(model => model.Money, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })
                    @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DateTimes, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.DateTimes, new { htmlAttributes = new { @class = "form-control", @placeholder = "日期" } })
                    @Html.ValidationMessageFor(model => model.DateTimes, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @cols = "80", @rows = "4" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button type="submit" class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.Action("BookkeepingList")
    </div>
</div>

